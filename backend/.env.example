# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# API Keys (required for AI features and news fetching)
export NEWSCLIENT_API_KEY=your_newsapi_key_here
export NEWSDATAIO_API_KEY=your_newsdataio_key_here  
export GEMINI_API_KEY=your_gemini_api_key_here
export SUMMARIZATION_SERVICE_URL=http://localhost:8000

# Background Worker Configuration
export WORKER_ENABLED=true                    # Set to 'false' to disable background worker
export WORKER_SCHEDULE_INTERVAL=1800          # Seconds between fetches (default: 1800 = 30 min)
export WORKER_USE_NEWSAPI=true               # Set to 'true' to use real NewsAPI
export WORKER_USE_CNN=true                   # Set to 'true' to use CNN RSS scraper
export WORKER_HOURS_BACK=1                    # Hours back to fetch articles (default: 1)
export WORKER_LIMIT=5                         # Max articles per fetch (default: 5)

# Database Configuration
export DB_PATH=veritas_news.db                # Path to SQLite database file

# Error Handling & Analysis Configuration
export DISABLE_SECM_ANALYSIS=false           # Set to 'true' to disable expensive SECM analysis (22 LLM calls)
export AUTO_BACKFILL_ON_STARTUP=true         # Set to 'true' to automatically backfill missing data on startup
export MAX_BACKFILL_ARTICLES=20              # Maximum articles to backfill on startup (default: 20)

# 503 Overload Handling
export GEMINI_503_RETRY_DELAY=5              # Extra delay (seconds) for 503 overload errors (default: 5)
export GEMINI_503_MAX_RETRIES=3              # Max retries for 503 errors before giving up (default: 3)
