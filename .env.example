# Database configuration
DB_PATH=./veritas_news.db

# Summarization Service Configuration
# The URL of the FastAPI summarization microservice
# For local development: http://localhost:8000
# For Docker: http://summarization-service:8000
SUMMARIZATION_SERVICE_URL=http://localhost:8000

# Google Gemini API Key (required for summarization service)
# Get your key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# News Fetcher Configuration (for worker)
# RSS feeds or news sources configuration
NEWS_SOURCES_CONFIG=./config/news_sources.json

# Logging
LOG_LEVEL=INFO

# API Server
API_HOST=0.0.0.0
API_PORT=8001

# Worker Configuration
WORKER_ENABLED=true
WORKER_SCHEDULE_INTERVAL=3600
WORKER_BATCH_SIZE=50
